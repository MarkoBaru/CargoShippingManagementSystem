<Window x:Class="CargoShipping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CargoShipping"
        mc:Ignorable="d"
        Title="Cargo Shipping Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Styles für bessere Optik -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
        </Style>
        
        <Style x:Key="SectionStyle" TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980B9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,10">
            <TextBlock Text="Cargo Shipping Management System" 
                       FontSize="24" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Cargo Tracking Tab -->
            <TabItem Header="Cargo Tracking">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Search Panel -->
                    <GroupBox Grid.Column="0" Header="Cargo Search" Style="{StaticResource SectionStyle}">
                        <StackPanel>
                            <TextBlock Text="Tracking ID:" Margin="0,0,0,5"/>
                            <TextBox x:Name="TrackingIdTextBox" Padding="5" Margin="0,0,0,10"/>
                            
                            <Button x:Name="SearchButton" Content="Search Cargo" 
                                    Style="{StaticResource ButtonStyle}"
                                    Click="SearchButton_Click"/>
                            
                            <Separator Margin="0,20"/>
                            
                            <!-- Quick Actions -->
                            <TextBlock Text="Quick Actions:" Style="{StaticResource HeaderStyle}"/>
                            <Button x:Name="CreateCargoButton" Content="Create New Cargo" 
                                    Style="{StaticResource ButtonStyle}"
                                    Click="CreateCargoButton_Click"/>
                            <Button x:Name="RegisterEventButton" Content="Register Handling Event" 
                                    Style="{StaticResource ButtonStyle}"
                                    Click="RegisterEventButton_Click"/>
                            <Button x:Name="ViewAllButton" Content="View All Cargo" 
                                    Style="{StaticResource ButtonStyle}"
                                    Click="ViewAllButton_Click"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Results Panel -->
                    <GroupBox Grid.Column="1" Header="Cargo Details" Style="{StaticResource SectionStyle}">
                        <ScrollViewer>
                            <StackPanel x:Name="CargoDetailsPanel">
                                <TextBlock Text="Select a cargo to view details..." 
                                          FontStyle="Italic" HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" Margin="20"/>
                            </StackPanel>
                        </ScrollViewer>
                    </GroupBox>
                </Grid>
            </TabItem>
            
            <!-- Cargo List Tab -->
            <TabItem Header="All Cargo">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button x:Name="RefreshListButton" Content="Refresh" 
                                Style="{StaticResource ButtonStyle}"
                                Click="RefreshListButton_Click"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="CargoDataGrid" Grid.Row="1" 
                              Margin="10" AutoGenerateColumns="False"
                              SelectionChanged="CargoDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Tracking ID" Binding="{Binding TrackingId}" Width="120"/>
                            <DataGridTextColumn Header="Origin" Binding="{Binding Origin}" Width="100"/>
                            <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                            <DataGridTextColumn Header="Current Location" Binding="{Binding CurrentLocation}" Width="120"/>
                            <DataGridTextColumn Header="ETA" Binding="{Binding Eta}" Width="120"/>
                            <DataGridCheckBoxColumn Header="Misdirected" Binding="{Binding Misdirected}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Handling Events Tab -->
            <TabItem Header="Handling Events">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <GroupBox Grid.Row="0" Header="Register New Event" Style="{StaticResource SectionStyle}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="Tracking ID:"/>
                                <TextBox x:Name="EventTrackingIdTextBox" Padding="3"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="Event Type:"/>
                                <ComboBox x:Name="EventTypeComboBox" Padding="3">
                                    <ComboBoxItem Content="RECEIVE"/>
                                    <ComboBoxItem Content="LOAD"/>
                                    <ComboBoxItem Content="UNLOAD"/>
                                    <ComboBoxItem Content="CLAIM"/>
                                    <ComboBoxItem Content="CUSTOMS"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="5">
                                <TextBlock Text="Location:"/>
                                <TextBox x:Name="EventLocationTextBox" Padding="3"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="5">
                                <TextBlock Text="Completion Time:"/>
                                <DatePicker x:Name="EventDatePicker"/>
                            </StackPanel>
                            
                            <Button Grid.Column="4" x:Name="RegisterEventSubmitButton" 
                                    Content="Register Event" Style="{StaticResource ButtonStyle}"
                                    VerticalAlignment="Bottom"
                                    Click="RegisterEventSubmitButton_Click"/>
                        </Grid>
                    </GroupBox>
                    
                    <DataGrid x:Name="EventsDataGrid" Grid.Row="1" 
                              Margin="10" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Event ID" Binding="{Binding EventId}" Width="200"/>
                            <DataGridTextColumn Header="Tracking ID" Binding="{Binding TrackingId}" Width="120"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                            <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="100"/>
                            <DataGridTextColumn Header="Completion Time" Binding="{Binding CompletionTime}" Width="150"/>
                            <DataGridTextColumn Header="Registration Time" Binding="{Binding RegistrationTime}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Locations & Voyages Tab -->
            <TabItem Header="Master Data">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Locations -->
                    <GroupBox Grid.Column="0" Header="Locations" Style="{StaticResource SectionStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="NewLocationCodeTextBox" Width="80" Margin="0,0,5,0" 
                                        ToolTip="UN/LOCODE"/>
                                <TextBox x:Name="NewLocationNameTextBox" Width="150" Margin="0,0,5,0" 
                                        ToolTip="Location Name"/>
                                <Button x:Name="AddLocationButton" Content="Add Location" 
                                        Style="{StaticResource ButtonStyle}"
                                        Click="AddLocationButton_Click"/>
                            </StackPanel>
                            
                            <ListBox x:Name="LocationsListBox" Grid.Row="1"/>
                        </Grid>
                    </GroupBox>
                    
                    <!-- Voyages -->
                    <GroupBox Grid.Column="1" Header="Voyages" Style="{StaticResource SectionStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="NewVoyageNumberTextBox" Width="120" Margin="0,0,5,0" 
                                        ToolTip="Voyage Number"/>
                                <Button x:Name="AddVoyageButton" Content="Add Voyage" 
                                        Style="{StaticResource ButtonStyle}"
                                        Click="AddVoyageButton_Click"/>
                            </StackPanel>
                            
                            <ListBox x:Name="VoyagesListBox" Grid.Row="1"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='Last Updated: {0:HH:mm:ss}'}"
                          xmlns:sys="clr-namespace:System;assembly=mscorlib"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
