<Window x:Class="CargoShipping.RegisterEventDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register Handling Event" Height="350" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Register Handling Event" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1">
            <TextBlock Text="Tracking ID:" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="TrackingIdComboBox" Style="{StaticResource InputStyle}" 
                      IsEditable="True" Padding="5"/>
            
            <TextBlock Text="Event Type:" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="EventTypeComboBox" Style="{StaticResource InputStyle}" Padding="5">
                <ComboBoxItem Content="RECEIVE"/>
                <ComboBoxItem Content="LOAD"/>
                <ComboBoxItem Content="UNLOAD"/>
                <ComboBoxItem Content="CLAIM"/>
                <ComboBoxItem Content="CUSTOMS"/>
            </ComboBox>
            
            <TextBlock Text="Location:" Style="{StaticResource LabelStyle}"/>
            <ComboBox x:Name="LocationComboBox" Style="{StaticResource InputStyle}" 
                      DisplayMemberPath="Name" Padding="5"/>
            
            <TextBlock Text="Completion Time:" Style="{StaticResource LabelStyle}"/>
            <DatePicker x:Name="CompletionDatePicker" Style="{StaticResource InputStyle}"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="RegisterButton" Content="Register" Width="80" Margin="0,0,10,0"
                    Click="RegisterButton_Click" IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" Width="80"
                    Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>